{
  "name": "steam-idle",
  "productName": "SteamIdle",
  "version": "1.0.0",
  "description": "A simple application for idling games on Steam.",
  "license": "MIT",
  "repository": "DevNvll/steam-idle",
  "author": {
    "name": "Henrick Mello",
    "email": "devnoir@protonmail.com",
    "url": "DevNvll.github.io"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "build": "electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --all --version=0.31.1"
